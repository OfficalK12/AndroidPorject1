<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0050C8"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/acc"
        android:padding="16dp"
        app:tint="#ffffff" />

    <TextView
        android:id="@+id/tvAccountMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập để quản lý chuyến đi của bạn"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnLoginPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập hoặc đăng ký"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0078FF"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF4444"
        android:textColor="#ffffff"
        android:visibility="gone" />
</LinearLayout>
