<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgRoom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Căn Hộ 1 Phòng Ngủ"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtRoomArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích: 43m²" />

        <TextView
            android:id="@+id/txtRoomFacilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi • TV • Điều hòa • Ban công"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtRoomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 1.654.200 VNĐ cho 2 đêm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnBackRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔙 Quay lại"
                android:backgroundTint="#9E9EFA"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📩 Đặt ngay"
                android:backgroundTint="@color/black"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Đánh giá & Nhận xét -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Đánh giá và Nhận xét"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtAverageRating"
                android:text="★ 4.5 / 5 (120 đánh giá)"
                android:textSize="16sp"
                android:textColor="#FFA000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Container chứa các nhận xét -->
            <LinearLayout
                android:id="@+id/reviewContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Một nhận xét mẫu -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Nguyễn Văn A"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Phòng sạch, yên tĩnh. Sẽ quay lại."
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Có thể thêm nhiều nhận xét bằng code -->
            </LinearLayout>

            <!-- Nút thêm nhận xét -->
            <Button
                android:id="@+id/btnAddReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm nhận xét"
                android:layout_marginTop="12dp"
                android:backgroundTint="#9E9EFA"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>